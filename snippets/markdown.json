{
    "WB Heading 1": {
      "prefix": "wb-h1",
      "body": "# ${1:Заголовок 1}",
      "description": "Заголовок 1 уровня"
    },
    "WB Heading 2": {
      "prefix": "wb-h2",
      "body": "## ${1:Заголовок 2}",
      "description": "Заголовок 2 уровня"
    },
    "WB Heading 3": {
      "prefix": "wb-h3",
      "body": "### ${1:Заголовок 3}",
      "description": "Заголовок 3 уровня"
    },  
    "WB List Unordered": {
      "prefix": "wb-list-ul",
      "body": [
        "- ${1:Пункт 1}",
        "- ${2:Пункт 2}",
        "- ${3:Пункт 3}"
      ],
      "description": "Маркированный список (3 пункта)"
    },
    "WB List Ordered": {
      "prefix": "wb-list-ol",
      "body": [
        "1. ${1:Пункт 1}",
        "2. ${2:Пункт 2}",
        "3. ${3:Пункт 3}"
      ],
      "description": "Нумерованный список (3 пункта)"
    },
  
    "WB Link": {
      "prefix": "wb-link",
      "body": "[${1:текст}](https://${2:example.com})",
      "description": "Стандартная ссылка"
    },
  
    "WB Component Photo": {
      "prefix": "wb-comp-photo",
      "body": [
        ":photo{",
        "  src=\"${1:URL}\"",
        "  ${2:caption=\"\"}",
        "  ${3:width=\"300px\"}",
        "  ${4:float=\"${5|right,left,center|}\"}",
        "}"
      ],
      "description": "Компонент фото. caption можно не указывать"
    },
    "WB Component Gallery": {
      "prefix": "wb-comp-gallery",
      "body": [
        ":gallery{",
        "  :data='[",
        "    [\"${1:URL}\", \"${2:Подпись}\"],",
        "    [\"${3:URL}\", \"${4:Подпись}\"],",
        "    [\"${5:URL}\", \"${6:Подпись}\"],",
        "    [\"${7:URL}\", \"${8:Подпись}\"],",
        "    [\"${9:URL}\", \"${10:Подпись}\"],",
        "    [\"${11:URL}\", \"${12:Подпись}\"],",
        "    [\"${13:URL}\", \"${14:Подпись}\"],",
        "    [\"${15:URL}\", \"${16:Подпись}\"],",
        "    [\"${17:URL}\", \"${18:Подпись}\"],",
        "    [\"${19:URL}\", \"${20:Подпись}\"]$0",
        "  ]'",
        "}"
      ],
      "description": "Галерея изображений. Подпись можно не указывать."
    },
    "WB Component Video": {
      "prefix": "wb-comp-video",
      "body": [
        ":video-player{",
        "  url=\"${1:URL}\"",
        "  ${2:width=\"500px\"}",
        "  ${3:height=\"280px\"}",
        "  ${4:float=\"${5|left,right|}\"}",
        "  ${6:cover=\"\"}",
        "}"
      ],
      "description": "Видеоплеер."
    },
    "WB Component Video Gallery": {
      "prefix": "wb-comp-video-gallery",
      "body": [
        ":video-gallery{",
        "  :data='[",
        "    [\"${1:URL}\", \"${2:Подпись}\", \"${3:Обложка}\"]",
        "    [\"${4:URL}\", \"${5:Подпись}\", \"${6:Обложка}\"]",
        "    [\"${7:URL}\", \"${8:Подпись}\", \"${9:Обложка}\"]",
        "    [\"${10:URL}\", \"${11:Подпись}\", \"${12:Обложка}\"]",
        "    [\"${13:URL}\", \"${14:Подпись}\", \"${15:Обложка}\"]",
        "    [\"${16:URL}\", \"${17:Подпись}\", \"${18:Обложка}\"]$0",
        "  ]'",
        "}"
      ],
      "description": "Видеогалерея. Подись можно не указывать."
    }
  }